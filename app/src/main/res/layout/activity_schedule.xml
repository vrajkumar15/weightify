<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.weightify.weightify.ScheduleActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule"
        android:id="@+id/tvSchedule"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="8:00 AM"
        android:id="@+id/tvBF"
        android:layout_below="@+id/tvSchedule"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="10:15 AM"
        android:id="@+id/tvSnack1"
        android:layout_below="@+id/tvBF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="12:30 AM"
        android:id="@+id/tvLunch"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/tvSnack1"
        android:layout_alignLeft="@+id/tvSnack1"
        android:layout_alignStart="@+id/tvSnack1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="3:45 PM"
        android:id="@+id/tvSnack2"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tvLunch"
        android:layout_alignStart="@+id/tvLunch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="7:00 PM"
        android:id="@+id/tvDinner"
        android:layout_below="@+id/tvSnack2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="8:30 PM"
        android:id="@+id/tvSnack3"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/tvDinner"
        android:layout_alignLeft="@+id/tvDinner"
        android:layout_alignStart="@+id/tvDinner" />
</RelativeLayout>
